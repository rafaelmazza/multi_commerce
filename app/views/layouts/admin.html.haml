%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Wizard - Você Bilíngue
    %meta{:content => "Café Azul Agência Digital - www.cafeazul.com.br", :name => "author"}/
    %meta{:content => "pt-br", "http-equiv" => "content-language"}/
    / %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans:400,700", :rel => "stylesheet", :type => "text/css"}/
    = javascript_include_tag "admin"
    = stylesheet_link_tag "admin"
    = csrf_meta_tags

    %body{style: "padding-top: 60px;"}
      - if alert || notice
        .container
          .alert
            %button.close{"data-dismiss" => "alert"} ×
            %strong Atenção!
            = notice if notice
            = alert if alert
      - if user_signed_in?
        .navbar.navbar-inverse.navbar-fixed-top
          .navbar-inner
            .container
              %button.btn.btn-navbar
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              %a.brand{href: "./index.html"} MultiCommerce
              .nav-collapse.collapse
                %ul.nav
                  %li.active
                    = link_to 'Dashboard', admin_root_path
                  %li
                    = link_to 'Leads', admin_leads_path(pending: true)
                  %li
                    = link_to 'Vouchers', admin_vouchers_path
                %ul.nav.pull-right
                  %li.dropdown
                    %a.dropdown-toggle{href: '#', "data-toggle" => "dropdown"} 
                      %span
                        = current_user.email
                        / %i
                        /   = "(#{current_user.role})"
                      %b.caret
                    %ul.dropdown-menu
                      %li
                        = link_to 'Editar', edit_user_registration_path
                      %li.divider
                      %li
                        = link_to 'Sair', destroy_user_session_path, :method => :delete
                  / %li
                  /   = link_to 'editar', edit_user_registration_path
                  / %li
                  /   = link_to 'sair', destroy_user_session_path, :method => :delete            
      .container
        = yield

